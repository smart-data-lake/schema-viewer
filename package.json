{
  "name": "sdlb-schema-viewer",
  "description": "React component for visualizing the Smart Data Lake Builder config schema.",
  "version": "1.2.0",
  "main": "./dist/main.js",
  "peerDependencies": {
    "@emotion/react": "11.x",
    "@emotion/styled": "11.x",
    "@mui/icons-material": "^7.1.1",
    "@mui/joy": "^5.0.0-beta.52",
    "d3": "7.x",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "copyfiles": "^2.4.1",
    "eslint-config-react-app": "^7.0.1",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.1.6",
    "vite": "^6.3.5",
    "vitest": "^3.2.3",
    "web-vitals": "^5.0.3"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/components/**/*.css dist/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "npx eslint src --ext .js,.jsx,.ts,.tsx --max-warnings=0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "files": [
    "dist"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/@types/d3"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smart-data-lake/schema-viewer"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@mui/material": "^7.1.1",
    "@mui/system": "^7.1.1",
    "json-schema": "^0.4.0"
  }
}
