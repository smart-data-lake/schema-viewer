{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["vite/client"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@mui/material": ["./node_modules/@mui/joy"]
    }
  },
  "include": [
    "src/components",
    "src/utils",
    "src/main.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}
